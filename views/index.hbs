{{#> exhead}}
  <script src="/search.js"></script>
{{/exhead}}

<body>
  {{> navbar}}
  <div class="search-bar">
    <div>Search for a bot...</div>
    <input type="text" maxlength="100" placeholder="Enter a search query..." onkeydown="searchBots(event)">
  </div>
  <div class="bots" id="search-result"></div>
  <div class="body-title">Random Bots <a href="/all">(View All)</a></div>
  <div class="bots">
    {{#each bots}}
    <div class="bot-card" onclick="window.location.href = '/bot/{{id}}'">
      <img src="https://cdn.discordapp.com/avatars/{{id}}/{{avatar}}.png?size=512">
      <span>
        {{username}}
        <span class="description">
          {{shortDesc}}
        </span>
      </span>
    </div>
    {{/each}}
    <a href="/add">
      <div class="bot-card">
        <img src="/add.png">
        <span>Add your bot!</span>
      </div>
    </a>
  </div>
</body>