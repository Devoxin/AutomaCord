<head>
  <title>AutomaCord</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="/style.css">
  <link href="https://fonts.googleapis.com/css?family=Poppins|Roboto" rel="stylesheet">
</head>

<body>
  {{> navbar}}
  <div class="bot-page">
    <div class="bot-info">
      <img src="https://cdn.discordapp.com/avatars/{{id}}/{{avatar}}.png?size=1024">
      <div class="bot-subinfo">
        <span class="bot-name">{{username}}</span>
        <span class="bot-label">Owner: {{owner.username}}#{{owner.discriminator}}</span>
        <span class="bot-label">Prefix: {{prefix}}</span>
        <span class="bot-label">{{shortDesc}}</span>
        <div class="bot-links">
          <a href="{{invite}}" target="_blank">
            <button>Invite</button>
          </a>
          {{#if canManageBot}}
          <a href="/edit?id={{id}}">
            <button>Edit</button>
          </a>
          <a href="/delete?id={{id}}">
            <button>Delete</button>
          </a>
          {{/if}}
          {{#if isWebAdmin}}
            {{#unless approved}}
            <a href="/approve?id={{id}}">
              <button>Approve</button>
            </a>
            <a href="/reject?id={{id}}">
              <button>Reject</button>
            </a>
            {{/unless}}
          {{/if}}
        </div>
      </div>
      <div class="long-description">
        {{preserveNewlines longDesc}}
      </div>
    </div>
  </div>
</body>
